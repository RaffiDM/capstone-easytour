<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select City"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <RadioGroup
            android:id="@+id/cityRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rb_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rb_jakarta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jakarta" />

            <RadioButton
                android:id="@+id/rb_bandung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bandung" />

            <RadioButton
                android:id="@+id/rb_semarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semarang" />

            <RadioButton
                android:id="@+id/rb_surabaya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Surabaya" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price Range"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/priceRangeSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            app:values="@array/default_price_range" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter by"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/filterChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_rating_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:text="Rating Tertinggi" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_rating_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:text="Rating Terendah" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_price_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:text="Price Tertinggi" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_price_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:text="Price Terendah" />

        </com.google.android.material.chip.ChipGroup>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Clear"
                android:layout_marginTop="16dp" />

            <Button
                android:id="@+id/btn_apply_filter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Apply Filter"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
