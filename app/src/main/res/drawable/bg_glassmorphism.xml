<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#AAFFFFFF"/> <!-- White dengan transparansi -->
            <corners android:radius="16dp" /> <!-- Sesuaikan dengan sudut rounded -->
        </shape>
    </item>

    <!-- Efek Blur (gunakan gambar buram atau library lain jika perlu) -->
    <item android:right="4dp" android:left="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#00FFFFFF" /> <!-- Transparansi murni -->
        </shape>
    </item>
</layer-list>
